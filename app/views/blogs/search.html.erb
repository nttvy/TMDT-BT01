    <% content_for :title, "Search result" %>
    
    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8">

                <h1 class="page-header">
                    Page Heading
                    <small>Secondary Text</small>
                </h1>

                <% if @blogs.empty? %>
                    <h1 style="text-align: center"> Blog not found! </h1>
                <% end %>

                <% @blogs.each do |blog| %>
                <div>
                    <h2>
                        <%= link_to blog.title, blog %>
                    </h2>
                    <p class="lead">
                        by Anonymous
                    </p>
                    <% if blog.created_at == blog.updated_at %>
                    <p><span class="glyphicon glyphicon-time"></span> Posted <%= time_ago_in_words(blog.created_at) %></p>
                    <% else %>
                    <p><span class="glyphicon glyphicon-time"></span> Edited <%= time_ago_in_words(blog.updated_at) %></p>
                    <% end %>
                    <hr>
                    <p><%= blog.content.lines.first %> </p>

                    <%= link_to blog, class: "btn btn-primary" do %>
                        Read more
                        <span class="glyphicon glyphicon-chevron-right"></span>
                    <% end %>

                    <hr>
                </div>
                <% end %>

                <!-- Pager -->
                <ul class="pager">
                    <li class="previous">
                        <a href="#">&larr; Older</a>
                    </li>
                    <li class="next">
                        <a href="#">Newer &rarr;</a>
                    </li>
                </ul>

            </div>

            <%= render 'blogs/sidebar' %>

        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->